@model CLDV1.Models.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<style>
    /* Style for dark background */
    body {
        background-color: #333;
        color: #fff;
    }

    /* Style for product container */
    .product-container {
        background-color: #222;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    /* Style for product title */
    .product-title {
        color: #fff;
        font-size: 24px;
        margin-bottom: 10px;
    }

    /* Style for product image */
    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    /* Style for product description */
    .product-description {
        font-size: 18px;
        margin-bottom: 10px;
    }

    /* Style for product price */
    .product-price {
        color: #009688;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Style for product category */
    .product-category {
        font-size: 16px;
        margin-bottom: 10px;
    }

    /* Style for add to cart button */
    .btn-add-to-cart {
        background-color: #009688;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath" alt="@Model.Name" class="product-image" />
        </div>
        <div class="col-md-6">
            <div class="product-container">
                <h2 class="product-title">@Model.Name</h2>
                <p class="product-description">@Model.Description</p>
                <p class="product-price">Price: @Model.Price.ToString("C")</p>
                <p class="product-category">Category: @Model.Category</p>
                <button class="btn-add-to-cart">Add to Cart</button>
            </div>
        </div>
    </div>
</div>