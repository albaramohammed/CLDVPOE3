@model IEnumerable<CLDV1.Models.ViewModel.ProductViewModel>

@{
    ViewBag.Title = "My Work";
}

<style>
    /* Your existing styles */
</style>

<h2>Explore Our Craftwork</h2>

@foreach (var product in Model)
{
    <div class="row">
        <div class="col-md-4">
            <div class="product-container">
                <h3 class="product-title">@product.Name</h3>
                <img src="@product.ImagePath" alt="@product.Name" class="product-image" />
                <p class="product-description">@product.Description</p>
                <p class="product-price">Price: @product.Price.ToString("C")</p>
            </div>
        </div>
    </div>
}