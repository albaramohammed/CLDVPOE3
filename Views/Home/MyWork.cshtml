    body {
        background-color: #333;
        color: #fff;
    }

    /* Style for product containers */
    .product-container {
        background-color: #222;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    /* Style for product titles */
    .product-title {
        color: #fff;
        font-size: 20px;
        margin-bottom: 10px;
    }

    /* Style for product images */
    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    /* Style for product descriptions */
    .product-description {
        font-size: 16px;
        margin-bottom: 10px;
    }

    /* Style for product prices */
    .product-price {
        color: #009688;
        font-size: 18px;
