@{
    ViewData["Title"] = "Contact Us";
}

<style>
    /* Style for dark background */
    body {
        background-color: #333;
        color: #fff;
    }

    /* Style for contact container */
    .contact-container {
        background-color: #222;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: center; /* Center-align content */
    }

    /* Style for contact title */
    .contact-title {
        color: #fff;
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Style for contact information */
    .contact-info {
        font-size: 18px;
        margin-bottom: 10px;
    }

    /* Style for map container */
    .map-container {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 20px;
    }

    /* Style for map */
    .map {
        width: 100%;
        height: 400px;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="contact-container">
    <h3 class="contact-title">Get in Touch</h3>
    <p class="contact-info"><strong>Address:</strong> Cape Town, South Africa</p> <!-- Updated address to Cape Town -->
    <p class="contact-info"><strong>Phone:</strong> +1 (123) 456-7890</p>
    <p class="contact-info"><strong>Email:</strong> info@example.com</p>
</div>

<div class="contact-container">
    <h3 class="contact-title">Find Us on Map</h3>
    <div class="map-container">
        <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6997922.931015051!2d16.221762754114446!3d-30.559482227306433!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc4f72a7c2b7a1%3A0xd3b92cc98eeb14c2!2sCape%20Town%2C%20South%20Africa!5e0!3m2!1sen!2sus!4v1648793988295!5m2!1sen!2sus" allowfullscreen></iframe> <!-- Updated map to Cape Town -->
    </div>
</div>
